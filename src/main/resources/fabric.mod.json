{
  "schemaVersion": 1,
  "id": "speech_to_spell",
  "version": "${version}",

  "name": "SpeechToSpell",
  "description": "Do magic with your voice",
  "authors": [
    "agent59"
  ],
  "contact": {
    "homepage": "",
    "modrinth": "https://modrinth.com/mod/speech_to_spell",
    "issues": "https://github.com/Agent59/SpeechToSpell/issues",
    "sources": "https://github.com/Agent59/SpeechToSpell"
  },

  "license": "LGPL-3.0 License",
  "icon": "stp-icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.agent59.StSMain"
    ],
    "client": [
      "net.agent59.StSClient"
    ],
    "cardinal-components": [
      "net.agent59.cardinal_component.Components"
    ]
  },
  "mixins": [
    "stp.mixins.json",
    {
      "config": "stp.client.mixins.json",
      "environment": "client"
    }
  ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "${minecraft_version}",
    "java": ">=21",
    "fabric-api": ">=${fabric_version}"
  },
  "suggests": {
    "another-mod": "*"
  },

  "custom": {
    "cardinal-components": [
      "speech_to_spell:magic"
    ]
  }
}
